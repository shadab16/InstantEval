<% content_for(:title, "Forgot your password?") %>

<% attributes = {method: :post, class: 'form-horizontal'} %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: attributes) do |f| %>
	<legend>Forgot your password?</legend>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="control-group">
		<%= f.label :email, class: 'control-label' %>
		<div class="controls">
			<%= f.email_field :email, class: 'input-xlarge' %>
		</div>
	</div>
	<div class="form-actions">
		<%= f.submit "Send reset instructions", class: 'btn btn-primary' %>
	</div>
<% end %>
