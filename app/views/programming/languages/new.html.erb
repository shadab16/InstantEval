<% content_for(:title, "New Programming Language") %>
<% content_for(:heading, "New Programming Language") %>

<p>
	<%= link_to 'All Languages', programming_languages_path, class: 'btn' %>
	<%= link_to 'New Language', new_programming_language_path, class: 'btn' %>
</p>

<%= form_for(@language, html: {class: 'form-horizontal'}) do |form| %>
	<legend>Programming Language</legend>
	<%= render 'form', f: form %>
	<div class="form-actions">
		<%= form.submit "Create Language", class: 'btn btn-primary' %>
	</div>
<% end %>
